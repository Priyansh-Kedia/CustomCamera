<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CCMultiple">
        <attr name="showSnapButton" format="boolean" />
        <attr name="snapButtonColor" format="color" />
        <attr name="snapButtonSelectedColor" format="color" />
        <attr name="showPreviewScreen" format="boolean" />
        <attr name="showNoPermissionToast" format="boolean" />
        <attr name="showRotateCamera" format="boolean" />
        <attr name="showFlashButton" format="boolean" />

        <!-- Single capture  done   -->
        <attr name="captureSingle" format="boolean" />

        <!-- Multiple Capture -->
        <attr name="captureMultiple" format="boolean" />
        <attr name="showImageDeselectionOption" format="boolean" />

        <!-- Continuous stream -->
        <attr name="streamContinuously" format="boolean" />

    </declare-styleable>
</resources>